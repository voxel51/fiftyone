FROM debian:9

RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --show-progress \
        apt-transport-https \
        libcurl3 \
        libglib2.0 \
        openssl \
        python3 \
        python3-pip

RUN apt-get install -y wget && \
    wget -qO - https://www.mongodb.org/static/pgp/server-4.2.asc | apt-key add - && \
    echo "deb http://repo.mongodb.org/apt/debian buster/mongodb-org/4.2 main" > /etc/apt/sources.list.d/mongodb-org-4.2.list && \
    apt-get update

ENV PATH="/root/.local/bin:${PATH}"

RUN pip3 install --user --upgrade pip setuptools wheel

WORKDIR /test
